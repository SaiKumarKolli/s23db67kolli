block content
  h1= title
  -let items = results
  div(class="container-fluid")
   div(class="row m-1")
    each item in items
     - let destination = `dispatch(\"/Recipes/update?id=${item._id}\")`
     div(class="row-sm-2", class="m-1") Item #{item.recipes_name}(#{item.recipes_qunatity}) is #{item.recipes_price}
      button.btn( class="btn-primary ml-1", onclick= destination) Update

  script.
   function dispatch(path){
     window.location.href=path
   }